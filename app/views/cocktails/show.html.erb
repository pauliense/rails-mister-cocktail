<h2><%=@cocktail.name%><%= link_to "Delete this cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to completly delete this cocktail?" } %></h2>


<%#= link_to 'Add an ingredient to the cocktail', new_cocktail_dose_path(@cocktail) %>



<ul>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.description %>
<%= dose.ingredient.name %><%= link_to "Delete", cocktail_dose_path(@cocktail, dose.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>


<h3>Would you like to add an ingredient to the cocktail?</h3>
<%= form_for ([@cocktail, @dose])  do |f| %>
  <%= f.collection_select :ingredient_id, @ingredients, :id, :name%>
  <%= f.label :amount %>
  <%= f.text_field :description %>
  <%= f.submit %>
<% end %>


<%= link_to "Go back", root_path %>
